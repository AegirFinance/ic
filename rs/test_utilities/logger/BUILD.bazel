load("@rules_rust//rust:defs.bzl", "rust_library")

package(default_visibility = ["//visibility:public"])

filegroup(
    name = "sources",
    srcs = glob(
        ["**"],
        exclude = ["target/**"],
    ),
)

rust_library(
    name = "logger",
    srcs = glob(["src/**"]),
    crate_name = "ic_test_utilities_logger",
    edition = "2018",
    deps = [
        "//rs/monitoring/logger",
        "@crate_index//:slog",
        "@crate_index//:slog-scope",
        "@crate_index//:slog-term",
    ],
)
